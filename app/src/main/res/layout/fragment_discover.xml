<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentDiscover">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recommendedCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Recommended categories"
                android:textColorHint="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="15dp"
                android:paddingTop="20dp"


                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        android:paddingLeft="5dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="150dp"

                            android:maxHeight="300dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/valorant" />

                        <TextView
                            android:id="@+id/labelValorant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:text="Valorant" />

                        <TextView
                            android:id="@+id/viewsValorant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rec"

                            android:text=" 97k"

                            />

                        <TextView
                            android:id="@+id/valorantGen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:text="Shooter"
                            android:background="@drawable/input_field"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="150dp"

                            android:maxHeight="300dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/fifa" />

                        <TextView
                            android:id="@+id/labelFifa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fifa 20"
                            android:textColor="@color/black"

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/viewsFifa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rec"

                            android:text=" 5.8k"

                            />

                        <TextView
                            android:id="@+id/fifaGen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/input_field"
                            android:paddingLeft="5dp"

                            android:paddingRight="5dp"
                            android:text="Sports Games" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="150dp"

                            android:maxHeight="300dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/warzone" />

                        <TextView
                            android:id="@+id/labelWarzone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Call of Duty: Warzone"
                            android:textColor="@color/black"

                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/viewscod"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rec"

                            android:text=" 158k"

                            />

                        <TextView
                            android:id="@+id/warzoneGen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:text="Shooter  FPS"
                            android:background="@drawable/input_field"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="150dp"

                            android:maxHeight="300dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/gta_v" />

                        <TextView
                            android:id="@+id/labelgtav"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:text="Gta V" />

                        <TextView
                            android:id="@+id/viewsGtav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rec"

                            android:text=" 284k"

                            />

                        <TextView
                            android:id="@+id/gtaGen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:text="Adeventure Game Fps"
                            android:background="@drawable/input_field"/>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="150dp"

                            android:maxHeight="300dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/dota" />

                        <TextView
                            android:id="@+id/labeldota"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:text="Dota 2" />

                        <TextView
                            android:id="@+id/vdota"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rec"

                            android:text=" 67k"

                            />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:text="Shooter"
                            android:background="@drawable/input_field"/>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="150dp"

                            android:maxHeight="300dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/minecraft_cover" />

                        <TextView
                            android:id="@+id/gtav"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:text="Minecraft" />

                        <TextView
                            android:id="@+id/viewsWarzone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_rec"

                            android:text=" 174k"

                            />

                        <TextView
                            android:id="@+id/minecraftGen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:text="Adventure Game"
                            android:background="@drawable/input_field"/>




                    </LinearLayout>




                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/recommendedChatting"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"


                    android:inputType="textMultiLine"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:text="Recommended Just Chatting Channels"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:menu="@menu/middle_menu"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme" />
            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"

                    >





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="300dp"

                            android:maxHeight="300dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/capture1" />

                        <TextView
                            android:id="@+id/labelcapture1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:text="JakebakeLIVE" />



                        <TextView
                            android:id="@+id/capture1Gen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:text="Spanish"
                            android:background="@drawable/input_field"/>




                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="10dp"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:maxWidth="300dp"

                            android:maxHeight="300dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/capture2" />

                        <TextView
                            android:id="@+id/labelCaptur2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textStyle="bold"

                            android:text="Pop life! luego Marbella" />



                        <TextView
                            android:id="@+id/capture2Gen"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"

                            android:text="Spanish"
                            android:background="@drawable/input_field"/>




                    </LinearLayout>




                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>
</FrameLayout>